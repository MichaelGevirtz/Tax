{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "@tax/domain": ["../domain/src"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
